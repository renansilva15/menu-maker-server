generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id      String    @id
  Product Product[]
}

model Product {
  id         String @id @default(uuid())
  managerId  String
  categoryId String

  name  String
  price Decimal

  manager  Manager  @relation(fields: [managerId], references: [id])
  category Category @relation(fields: [categoryId], references: [id])
}

model Manager {
  id  String @id @default(uuid())
  cpf String @unique

  name     String
  email    String @unique
  password String

  storeName String
  zap       String

  firstTime Boolean @default(true)

  Product Product[]
  User    User[]
}

model User {
  id       String @id @default(uuid())
  cpf      String @unique
  name     String
  email    String @unique
  password String

  manager Manager[]
}

